@model System.Collections.Generic.List<Gob.Web.Models.ProductDto>

@{
    ViewBag.Title = "Product List";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ManageProduct" class="btn btn-outline-primary"><i class="fas fa-plus"></i>Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a asp-action="ManageProduct" asp-route-ProductId="@item.ProductId" class="btn btn-success"><i class="fas fa-edit"></i></a>
                        <a asp-action="DeleteProduct" asp-route-ProductId="@item.ProductId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>